<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #1D1D1D;"
      xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="rocket_chat.ChatController"
      stylesheets="@styles/common.css, @styles/chat.css">
	<VBox VBox.vgrow="ALWAYS" spacing="10">
		<TextArea fx:id="chatWindow" editable="false" focusTraversable="false" wrapText="true"
		          VBox.vgrow="ALWAYS"/>
	</VBox>
	<HBox>
		<TextField fx:id="inputField" onKeyPressed="#keyListener" promptText="write message..." HBox.hgrow="ALWAYS"/>
		<Button fx:id="sendButton" styleClass="button-mark, send-button" text="Send" onAction="#sendMessageListener"
		        prefHeight="50"/>
	</HBox>
</VBox>